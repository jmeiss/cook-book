%h1 Listing recipes
%table
  %thead
    %tr
      %th Name
      %th Preparation time
      %th Roasting time
      %th Quantity
      %th Url
      %th User
      %th
      %th
      %th
  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= recipe.name
        %td= recipe.preparation_time
        %td= recipe.roasting_time
        %td= recipe.quantity
        %td= recipe.url
        %td= recipe.user
        %td= link_to 'Show', recipe
        %td= link_to 'Edit', edit_recipe_path(recipe)
        %td= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Recipe', new_recipe_path

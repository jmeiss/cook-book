= form_for(@direction) do |f|
  - if @direction.errors.any?
    #error_explanation
      %h2
        = pluralize(@direction.errors.count, "error")
        prohibited this direction from being saved:
      %ul
        - @direction.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_area :name
  .field
    = f.label :position
    %br/
    = f.number_field :position
  .field
    = f.label :recipe
    %br/
    = f.text_field :recipe
  .actions
    = f.submit

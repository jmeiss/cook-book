!!! 5
%html{:lang => 'fr'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title= "#{yield(:title)} - CookBook" || 'CookBook'
    = csrf_meta_tags

    /[if lt IE 9]
      %script{:type => 'text/javascript', :src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}

    = stylesheet_link_tag 'application', media: :all, 'data-turbolinks-track' => true

    %link{:href => image_path('favicon.ico'), :rel => "shortcut icon"}
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}

  %body
    .container
      %div
        %ul.nav.nav-pills.pull-right
          - if user_signed_in?
            %li
              = link_to destroy_user_session_path, :method => :delete do
                %i.icon-off.icon-white.sign-out-icon
                = 'DÃ©connexion'
          - else
            %li= link_to 'Connexion Facebook', user_omniauth_authorize_path(:facebook)
        %h3= link_to 'CookBook', root_path, :class => 'brand'

      = yield
      %hr
      %footer
        %p=raw "&copy; CookBook - #{l Date.today, format: :year}"

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

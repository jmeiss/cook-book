- title 'Ajouter une recette'

%h1= yield :title

.row
  .span6
    = simple_form_for [current_user, @recipe], html: {class: 'form-horizontal'} do |f|
      .form-inputs
        %fieldset
          %legend= 'Importer une recette'
          = f.input :url_to_parse, placeholder: 'http://www...'
          %p= 'Sites support√©s :'
          %ul
            %li= link_to 'http://www.marmiton.org', 'http://www.marmiton.org'

      .form-actions
        = f.button :submit, class: 'btn btn-primary'
        = submit_tag 'Annuler', type: :reset, class: 'btn btn-danger'

  .span6
    = render 'form'

= link_to 'Back', user_recipes_path(current_user)

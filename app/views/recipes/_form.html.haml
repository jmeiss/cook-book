= form_for(@recipe) do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2
        = pluralize(@recipe.errors.count, "error")
        prohibited this recipe from being saved:
      %ul
        - @recipe.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :preparation_time
    %br/
    = f.number_field :preparation_time
  .field
    = f.label :roasting_time
    %br/
    = f.number_field :roasting_time
  .field
    = f.label :quantity
    %br/
    = f.text_field :quantity
  .field
    = f.label :url
    %br/
    = f.text_area :url
  .field
    = f.label :user
    %br/
    = f.text_field :user
  .actions
    = f.submit

%h1 Listing recipes
%table.table
  %thead
    %tr
      %th Name
      %th Preparation time
      %th Roasting time
      %th Quantity
      %th Url
      %th
      %th
      %th
  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= recipe.name
        %td= recipe.preparation_time
        %td= recipe.roasting_time
        %td= recipe.quantity
        %td= recipe.url
        %td= link_to 'Voir', [current_user, recipe]
        %td= link_to 'Modifier', edit_user_recipe_path(current_user, recipe)
        %td= link_to 'Supprimer', [current_user, recipe], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Nouvelle recette', new_user_recipe_path(current_user)
